    <script>
        const menu = document.getElementById('menu');
        const nav = document.getElementById('nav');
        let counter = 0;
        menu.addEventListener('click', () => {
            if (counter === 0) {

                nav.style.height = "390px";
                counter++;
            } else {
                nav.style.height = "60px";
                counter--;
            }
        })
    </script>
